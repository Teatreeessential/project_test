//받아온 값을 차트로 그려주기 전에 하는 로직
let i =<%=@github_language.to_json.html_safe%>
let arr_name =[]
let arr_value = []
for(let key in i){
    arr_name.push(key)
    arr_value.push(i[key])
}


var ctx = document.getElementById("myChart").getContext('2d');
var myChart = new Chart(ctx, {
    type: 'doughnut',
    data: {
        
        labels: arr_name,
        datasets: [{
            label: '# of Votes',
            data: arr_value,
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)',
                'rgba(245, 245, 245, 0.2)',
                'rgba(64, 224, 208, 0.2)',
                'rgba(216, 191, 216, 0.2)',
                'rgba(0, 0, 128, 0.2)'
                
            ],
            borderColor: [
                'rgba(255,99,132,1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)',
                'rgba(245, 245, 245, 1)',
                'rgba(64, 224, 208, 1)',
                'rgba(216, 191, 216, 1)',
                'rgba(0, 0, 128, 1)'
                
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero:true
                }
            }]
        }
    }
});